      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"weights\": {\n    \"experience\": 0.4,\n    \"skills\": 0.1,\n    \"industry\": 0.1,\n    \"languages\": 0.1,\n    \"availability\": 0.1,\n    \"timezone\": 0.05,\n    \"performance\": 0.1,\n    \"region\": 0.05\n  },\n  \"limit\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/matches/gig/{{gigId}}/matches",
          "host": ["{{baseUrl}}"],
          "path": ["matches", "gig", "{{gigId}}", "matches"]
        }
      }
    },
    {
      "name": "Get All Matches",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/matches",
          "host": ["{{baseUrl}}"],
          "path": ["matches"]
        }
      }
    }
  ]
} 