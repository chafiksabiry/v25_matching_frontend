{
  "info": {
    "name": "HARX Matching API Tests",
    "description": "Collection pour tester le systÃ¨me de matching HARX",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5010/api",
      "type": "string"
    },
    {
      "key": "gigId",
      "value": "",
      "type": "string"
    },
    {
      "key": "repId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Get All Reps",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reps",
          "host": ["{{baseUrl}}"],
          "path": ["reps"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Sauvegarder le premier repId pour les tests suivants",
              "if (pm.response.json().length > 0) {",
              "    pm.collectionVariables.set('repId', pm.response.json()[0]._id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Get All Gigs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/gigs",
          "host": ["{{baseUrl}}"],
          "path": ["gigs"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Sauvegarder le premier gigId pour les tests suivants",
              "if (pm.response.json().length > 0) {",
              "    pm.collectionVariables.set('gigId', pm.response.json()[0]._id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Find Matches for Gig",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"weights\": {\n    \"experience\": 0.15,\n    \"skills\": 0.2,\n    \"industry\": 0.15,\n    \"languages\": 0.1,\n    \"availability\": 0.1,\n    \"timezone\": 0.05,\n    \"performance\": 0.2,\n    \"region\": 0.05\n  },\n  \"limit\": 10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/matches/gig/{{gigId}}/matches",
          "host": ["{{baseUrl}}"],
          "path": ["matches", "gig", "{{gigId}}", "matches"]
        }
      }
    },
    {
      "name": "Find Gigs for Rep",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"weights\": {\n    \"experience\": 0.15,\n    \"skills\": 0.2,\n    \"industry\": 0.15,\n    \"languages\": 0.1,\n    \"availability\": 0.1,\n    \"timezone\": 0.05,\n    \"performance\": 0.2,\n    \"region\": 0.05\n  },\n  \"limit\": 10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/matches/rep/{{repId}}/gigs",
          "host": ["{{baseUrl}}"],
          "path": ["matches", "rep", "{{repId}}", "gigs"]
        }
      }
    },
    {
      "name": "Generate Optimal Matches",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"weights\": {\n    \"experience\": 0.15,\n    \"skills\": 0.2,\n    \"industry\": 0.15,\n    \"languages\": 0.1,\n    \"availability\": 0.1,\n    \"timezone\": 0.05,\n    \"performance\": 0.2,\n    \"region\": 0.05\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/matches/optimize",
          "host": ["{{baseUrl}}"],
          "path": ["matches", "optimize"]
        }
      }
    },
    {
      "name": "Test Different Weights - Skills Heavy",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"weights\": {\n    \"experience\": 0.1,\n    \"skills\": 0.4,\n    \"industry\": 0.1,\n    \"languages\": 0.1,\n    \"availability\": 0.1,\n    \"timezone\": 0.05,\n    \"performance\": 0.1,\n    \"region\": 0.05\n  },\n  \"limit\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/matches/gig/{{gigId}}/matches",
          "host": ["{{baseUrl}}"],
          "path": ["matches", "gig", "{{gigId}}", "matches"]
        }
      }
    },
    {
